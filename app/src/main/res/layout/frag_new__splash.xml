<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:fb="http://schemas.android.com/apk/res-auto"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg"
        android:clickable="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/animationImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_loginbox"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="30"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/et_emailaddr"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/linearlayout_bg"
                android:drawableLeft="@mipmap/username_icon_36"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:paddingBottom="7dp"
                android:paddingLeft="10dp"
                android:paddingTop="7dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#99000000"
                android:textSize="16sp" >
            </EditText>

            <EditText
                android:id="@+id/et_passwd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/linearlayout_bg"
                android:drawableLeft="@mipmap/password_icon_36"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingBottom="7dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="7dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#99000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#46c83c"
                android:text="Login"
                android:textColor="#ffffff"
                android:textColorHint="#000000"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/rl_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="10"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_frgt_pwd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="left"
                    android:text="Forgot your password?"
                    android:textColor="#80000000"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_register_now"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="right"
                    android:text="Register Now"
                    android:textColor="#80000000"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="25"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/rl_31"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <View
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/btn_facebook"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="25"
                    android:src="@drawable/login_button_fb" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/btn_google_plus"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="25"
                    android:src="@drawable/login_button_google" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="50"
                android:gravity="center"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>