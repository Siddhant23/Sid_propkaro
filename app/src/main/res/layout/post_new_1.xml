<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:fb="http://schemas.android.com/apk/res-auto"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:app1="http://schemas.android.com/apk/res/com.propkaro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e2e2e2"
        android:clickable="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/new1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical" >

            <android.support.v7.widget.CardView
                android:id="@+id/card_viewss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app1:cardElevation="1dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="1dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp" >

                    <TextView
                        android:id="@+id/tv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your selections will show here"
                        android:textColor="#000000"
                        android:textSize="12sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/new2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/new1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical" >

            <android.support.v7.widget.CardView
                android:id="@+id/card_visewss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app1:cardElevation="1dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="1dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/tv_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Listing Type"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                         android:id="@+id/tv_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select your listing type from below"
                        android:textColor="#000"
                        android:textSize="13sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/new2"
            android:layout_marginBottom="50dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/lnr_sss1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1" >

                <RelativeLayout
                    android:id="@+id/rl_availability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight=".5"
                    android:orientation="vertical" >

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_availability"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app1:cardElevation="2dp"
                        card_view:cardCornerRadius="4dp"
                        card_view:cardUseCompatPadding="true"
                        card_view:contentPadding="1dp" >

                        <RelativeLayout
                            android:id="@+id/rl_availability2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/iv_availability"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:src="@mipmap/availability_icon" />

                            <TextView
                                 android:id="@+id/tv_avalbility"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iv_availability"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="20dp"
                                android:gravity="center"
                                android:text="Availability" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_requirement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight=".5"
                    android:orientation="vertical" >

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_req"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app1:cardElevation="1dp"
                        card_view:cardCornerRadius="4dp"
                        card_view:cardUseCompatPadding="true"
                        card_view:contentPadding="1dp" >

                        <RelativeLayout
                            android:id="@+id/rl_availabilitysc2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/iv_requirement"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:src="@mipmap/requirement_icon" />

                            <TextView
                                 android:id="@+id/tv_reqrement"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iv_requirement"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="20dp"
                                android:gravity="center"
                                android:text="Requirement" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/lnr_bottom"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:background="#1789ce"
            android:clickable="true"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/back0"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_gravity="left"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@mipmap/back" />

            <TextView
                android:id="@+id/tv_step1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Step 1/6"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/back1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@mipmap/arrow_right" />
        </RelativeLayout>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>