<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:gravity="center"
            android:orientation="vertical" >

            <Spinner
                android:id="@+id/user_type"
                android:layout_width="270dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:background="@mipmap/spin"
                android:paddingLeft="45dp"
                android:prompt="@string/spinner_user"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="43dp"
                android:layout_marginTop="3dp"
                android:drawableLeft="@mipmap/full_name"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2" >

                <EditText
                    android:id="@+id/et_fName"
                    android:layout_width="135dp"
                    android:layout_height="43dp"
                    android:layout_weight="1"
                    android:background="@drawable/linearlayout_bg"
                    android:drawableLeft="@mipmap/full_name"
                    android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
                    android:drawablePadding="20dp"
                    android:ems="10"
                    android:hint="First Name"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textColorHint="#66000000"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_lName"
                    android:layout_width="135dp"
                    android:layout_height="43dp"
                    android:layout_weight="1"
                    android:background="@drawable/linearlayout_bg"
					android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
                    android:drawablePadding="20dp"
                    android:layout_marginLeft="4dp"
                    android:paddingLeft="5dp"
                    android:ems="10"
                    android:hint="Last Name"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textColorHint="#66000000"
                    android:textSize="15sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_emailaddr"
                android:layout_width="270dp"
                android:layout_height="43dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/linearlayout_bg"
                android:drawableLeft="@mipmap/email_address"
                android:drawablePadding="20dp"
                android:ems="10"
                android:fontFamily="Sans Serif"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#66000000"
                android:textSize="15sp" >
            </EditText>

            <EditText
                android:id="@+id/et_mobile"
                android:layout_width="270dp"
                android:layout_height="43dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/linearlayout_bg"
                android:drawableLeft="@mipmap/full_name"
                android:drawablePadding="20dp"
                android:ems="10"
                android:fontFamily="Sans Serif"
                android:hint="Enter Mobile Number"
                android:inputType="number"
                android:maxLength="10"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#66000000"
                android:textSize="15sp" >
            </EditText>

            <EditText
                android:id="@+id/et_passwd"
                android:layout_width="270dp"
                android:layout_height="43dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/linearlayout_bg"
                android:drawableLeft="@mipmap/user2"
                android:drawablePadding="20dp"
                android:ems="10"
                android:fontFamily="Sans Serif"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#66000000"
                android:textSize="15sp" >
            </EditText>

            <Button
                android:id="@+id/btn_signup"
                android:layout_width="170dp"
                android:layout_height="43dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/btn_bg_round_selector"
                android:gravity="center"
                android:text="SIGN UP"
                android:textColor="#ffffff"
                android:textColorHint="#66000000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_skip"
                android:layout_width="170dp"
                android:layout_height="43dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_bg_round_selector"
                android:gravity="center"
                android:text="DEVELOPER OPTION"
                android:textColor="#ffffff"
                android:textColorHint="#66000000"
                android:textSize="15sp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@mipmap/logo" />

</RelativeLayout>