<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:fb="http://schemas.android.com/apk/res-auto"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:app1="http://schemas.android.com/apk/res/com.propkaro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e2e2e2"
        android:clickable="true"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="45dp"
            android:fillViewport="true"
            android:orientation="vertical"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/la_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/new1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical" >

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_viewss"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app1:cardElevation="1dp"
                        card_view:cardCornerRadius="7dp"
                        card_view:cardUseCompatPadding="true"
                        card_view:contentPadding="3dp" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/tv_from_step5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Availability|Rent| Residential|Delhi"
                                android:textColor="#000"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/new2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/new1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical" >

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_visewss"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app1:cardElevation="1dp"
                        card_view:cardCornerRadius="4dp"
                        card_view:cardUseCompatPadding="true"
                        card_view:contentPadding="3dp" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Extra Information"
                                android:textColor="#000"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Extra Information for your listing"
                                android:textColor="#000"
                                android:textSize="13sp" />

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="10dp"
                                android:background="#66000000"
                                android:orientation="vertical" />

                            <LinearLayout
                                android:id="@+id/lnr_spin2"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ll3"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal"
                                android:weightSum="2" >

                                <Spinner
                                    android:id="@+id/spin_possession"
                                    style="@style/style_spinner"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:spinnerMode="dialog"
                                    android:textColor="#000000"
                                    android:textColorHint="#66000000"
                                    android:textStyle="normal" />

                                <Spinner
                                    android:id="@+id/spin_furnishing"
                                    style="@style/style_spinner"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:spinnerMode="dialog"
                                    android:textColor="#000000"
                                    android:textColorHint="#66000000"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lnr_3"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ll3"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal"
                                android:weightSum="2" >

                                <EditText
                                    android:id="@+id/et_add_price"
                                    style="@style/style_edittext"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:hint="Price per Unit"
                                    android:inputType="number"
                                    android:maxLength="10"
                                    android:paddingLeft="10dp"
                                    android:spinnerMode="dialog"
                                    android:textColor="#66000000"
                                    android:textColorHint="#66000000"
                                    android:textStyle="normal" />

                                <Spinner
                                    android:id="@+id/spin_add_price_unit"
                                    style="@style/style_edittext"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:spinnerMode="dialog"
                                    android:textColor="#000000"
                                    android:textColorHint="#66000000"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lnr_4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ll3"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal"
                                android:weightSum="2" >

                                <EditText
                                    android:id="@+id/et_mntnce_charge"
                                    style="@style/style_edittext"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:hint="Maintenance"
                                    android:inputType="number"
                                    android:maxLength="8"
                                    android:paddingLeft="10dp"
                                    android:textColor="#000000"
                                    android:textColorHint="#66000000"
                                    android:textStyle="normal" />

                                <Spinner
                                    android:id="@+id/spin_freq"
                                    style="@style/style_spinner"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:singleLine="true"
                                    android:spinnerMode="dialog"
                                    android:textColor="#000000"
                                    android:textColorHint="#66000000"
                                    android:textStyle="normal" />
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/new3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/new2"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical" >

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_visewsqw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app1:cardElevation="1dp"
                        card_view:cardCornerRadius="4dp"
                        card_view:cardUseCompatPadding="true"
                        card_view:contentPadding="3dp" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Amenities"
                                android:textColor="#000"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tap to choose your amenities"
                                android:textColor="#000"
                                android:textSize="13sp" />

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="10dp"
                                android:background="#66000000"
                                android:orientation="vertical" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical" >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="9" >

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_weight="3"
                                        android:gravity="center" >

                                        <ImageButton
                                            android:id="@+id/btn_airport"
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:background="@mipmap/airport_unselected"
                                            android:gravity="center"
                                            android:state_selected="false" >
                                        </ImageButton>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_weight="3"
                                        android:gravity="center" >

                                        <ImageButton
                                            android:id="@+id/btn_bus"
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:background="@mipmap/bus_unselected"
                                            android:gravity="center"
                                            android:state_selected="false" >
                                        </ImageButton>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_weight="3"
                                        android:gravity="center" >

                                        <ImageButton
                                            android:id="@+id/btn_gym"
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:background="@mipmap/gym_unselected"
                                            android:gravity="center"
                                            android:state_selected="false" >
                                        </ImageButton>
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal"
                                    android:weightSum="9" >

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_weight="3"
                                        android:gravity="center" >

                                        <ImageButton
                                            android:id="@+id/btn_hospital"
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:background="@mipmap/hospital_unselected"
                                            android:gravity="center"
                                            android:state_selected="false" >
                                        </ImageButton>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_weight="3"
                                        android:gravity="center" >

                                        <ImageButton
                                            android:id="@+id/btn_internet"
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:background="@mipmap/internet_unselected"
                                            android:gravity="center"
                                            android:state_selected="false" >
                                        </ImageButton>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_weight="3"
                                        android:gravity="center" >

                                        <ImageButton
                                            android:id="@+id/btn_market"
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:background="@mipmap/market_unselected"
                                            android:gravity="center"
                                            android:state_selected="false" >
                                        </ImageButton>
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal"
                                    android:weightSum="9" >

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_weight="3"
                                        android:gravity="center" >

                                        <ImageButton
                                            android:id="@+id/btn_park"
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:background="@mipmap/park_unselected"
                                            android:gravity="center"
                                            android:state_selected="false" >
                                        </ImageButton>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_weight="3"
                                        android:gravity="center" >

                                        <ImageButton
                                            android:id="@+id/btn_railway_stn"
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:background="@mipmap/rail_unselected"
                                            android:gravity="center"
                                            android:state_selected="false" >
                                        </ImageButton>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_weight="3"
                                        android:gravity="center" >

                                        <ImageButton
                                            android:id="@+id/btn_school"
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:background="@mipmap/school_unselected"
                                            android:gravity="center"
                                            android:state_selected="false" >
                                        </ImageButton>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/new4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/new3"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical" >

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_vsc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app1:cardElevation="1dp"
                        card_view:cardCornerRadius="7dp"
                        card_view:cardUseCompatPadding="true"
                        card_view:contentPadding="3dp" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp" >

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical" >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#22F2F2F2"
                                    android:gravity="center|top"
                                    android:orientation="vertical" >

                                    <ImageView
                                        android:id="@+id/iv_profile"
                                        android:layout_width="match_parent"
                                        android:layout_height="250dp"
                                        android:orientation="vertical"
                                        android:padding="2dp"
                                        android:scaleType="fitXY"
                                        android:src="@mipmap/home" />
                                </LinearLayout>

                                <Button
                                    android:id="@+id/btn_selectPic"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginTop="10dp"
                                    android:background="#46C83C"
                                    android:gravity="center"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp"
                                    android:padding="2dp"
                                    android:text="SELECT PICTURE"
                                    android:textColor="#ffffffff"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center|top"
                                android:orientation="vertical"
                                android:paddingTop="20dp"
                                android:visibility="gone" >

                                <Button
                                    android:id="@+id/btn_uploadPic"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:background="@drawable/btn_bg_round_selector"
                                    android:gravity="center"
                                    android:text="UPLOAD"
                                    android:textColor="#ffffff"
                                    android:textColorHint="#000000"
                                    android:textSize="15sp" />

                                <Button
                                    android:id="@+id/btn_skipPic"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="60dp"
                                    android:layout_marginRight="60dp"
                                    android:layout_marginTop="20dp"
                                    android:background="@drawable/btn_bg_round_selector"
                                    android:gravity="center"
                                    android:text="SKIP"
                                    android:textColor="#ffffff"
                                    android:textColorHint="#000000"
                                    android:textSize="15sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/lnr_bottom"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:background="#1789ce"
                android:clickable="true"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/back0"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:src="@mipmap/back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Step 6/6"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btn_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Finish"
                    android:textColor="#fff" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>